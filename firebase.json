{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "target": "daddel",
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "firestore": {
      "port": 8080
    },
    "functions": {
      "port": 5001
    }
  },
  "functions": {
    "predeploy": "npm --prefix functions run build",
    "source": "functions"
  }
}
