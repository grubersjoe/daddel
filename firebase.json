{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "target": "daddel",
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "trailingSlash": false,
    "headers": [
      {
        "source": "*",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "*.@(ico|png)",
        "headers": [
          {
            "key": "cache-control",
            "value": "public, max-age=3600"
          }
        ]
      },
      {
        "source": "static/**/*",
        "headers": [
          {
            "key": "cache-control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    }
  },
  "functions": {
    "predeploy": "npm --prefix functions run build",
    "source": "functions"
  }
}
